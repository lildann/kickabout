

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form'}) do |f| %>
  <h2>Log in</h2>
	
	<%= f.label :email, class: %w(sr-only) %><br />
	<%= f.email_field :email, autofocus: true, autocomplete: "email", class: %w(input_text), placeholder: "Email" %>



	<%= f.label :password, class: %w(sr-only) %><br />
	<%= f.password_field :password, autocomplete: "current-password", class: %w(input_text), placeholder: "Password" %>


  <% if devise_mapping.rememberable? %>
		<div>
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
		</div>
		
  <% end %>

  <%= f.submit "Log in", class: %w(form-btn) %>

	<%= render "devise/shared/links" %>
<% end %>


