

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form'}) do |f| %>
  <h2>Log in</h2>
	
	<div class="field">
    <%= f.label :email, class: %w(sr-only) %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: %w(input_text) %>
  </div>

  <div class="field">
    <%= f.label :password, class: %w(sr-only) %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: %w(input_text) %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: %w(form-btn) %>
  </div>

	<%= render "devise/shared/links" %>
<% end %>


